<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1>Add a list</h1>
      <%= simple_form_for [@list] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Add', class: 'btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
