<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://wallpaperaccess.com/full/3658604.jpg);">
  <div class="container">
    <h1>Movie Lists</h1>
    <p>Watch something good recently? Need something new to watch? Check out one of our movie lists!</p>
  </div>
</div>


<div class='container mt-4'>
  <div class='cards'>
    <% @lists.each do |list| %>
      <div class='card-title'style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= !list.photo.attached? ? "https://i2.wp.com/www.vivarmor.fr/wp-content/uploads/2018/02/soir%C3%A9e-cin%C3%A9ma.jpg" : cl_image_path(list.photo.key) %>)">
        <div class="card-title-content"><%= link_to "#{truncate(list.name)}", "lists/#{list.id}" %></div>
        <div class="card-delete"><%= link_to '', list_path(list), method: :delete, data: { confirm: 'Are you sure?'}, class: "fas fa-trash-alt" %></div>
      </div>
    <% end %>
  </div>
</div>
